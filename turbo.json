{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"] 
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check": { 
      "dependsOn": ["^check"]
    },
    "db:generate": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["apps/backend/src/generated/**"]
    },
    "db:migrate": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}